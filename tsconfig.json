{
  "compilerOptions": {
    // Enable features
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ES2020",
    "moduleDetection": "force",
    "jsx": "react",
    "allowJs": false,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true,
    // Paths mapping
    "paths": {
      "@components/*": [
        "./source/components/*"
      ],
      "@images/*": [
        "./source/images/*"
      ],
      "@libraries/*": [
        "./libraries/*"
      ],
    }
  }
}
